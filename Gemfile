source "https://rubygems.org"

gem 'hashie' #Adds the gem 'hashie' without spec a version
gem "sinatra", "1.4.4" #Adds the gem 'sinatra' at version 1.4.4
gem "octokit", "~>2.0" #Adds the gem 'octokit' at version 2.0 or higher but less than 3.0
gem "awesome_print", :git => 'https://github.com/awesome-print/awesome_print.git' #Adds the gem with it's git source

gem 'pry', :group => 'development' #Adds the pry gem only to be used in the development phase

group :test do #Adds the gem rspec to be used only during the test phase
  gem "rspec"
end
