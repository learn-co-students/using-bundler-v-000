source "https://rubygems.org"

gem "sinatra", "1.4.4" #DSL for quick creation of web apps in Ruby
gem "hashie" #collection of classes and mixins that make hashes more powerful
gem "octokit", "~> 2.0"  #wrapper for GitHub API
gem "pry", :group => "development"  #IRB alternative and runtime developer console
gem "awesome_print", :git => "https://github.com/awesome-print/awesome_print.git" #debugging companion and specifies to get it at github repo

group :test do
    gem "rspec"
end
